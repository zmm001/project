<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="applicable-device" content="pc" />
    @RenderSection("meta", false)
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?99a36e54478482e04c158ab069a3e598";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>
    <link href="@Url.Content("~/Areas/WenDa/asset/css/user.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Areas/WenDa/asset/js/jquery-1.8.3.min.js")"></script>
    <script src="@Url.Content("~/Areas/WenDa/asset/js/jquery.form.js")"></script>
    <style>
        body a {
            cursor: pointer;
        }
    </style>
</head>

<body>
    @*头部加载*@
    @{Html.RenderPartial(Url.Content("~/Areas/WenDa/Views/Shared/Header.cshtml"));}

    <div class="wrapper main-container clearfix">
        @if (ViewBag.AuthorNews == null || !ViewBag.AuthorNews)
        {
            Html.RenderAction("UserInfo", "Shared", new { area = "WenDa", pageType = ViewBag.PageType });
        }

        @RenderBody()
    </div>
    <!-- 提问弹出框 -->
@{Html.RenderAction("_PutQuestion", "Shared",new {area="WenDa"});}

<div class="floatbar">
    <a href="javascript:;" class="refresh"><i></i></a>
    <a href="javascript:;" class="top"><i></i></a>
</div>
<div class="pop-box">
    <div class="msg" id="msg">确定要删除吗？</div>
    <span class="btn cancel">取消</span>
    <span class="btn confirm">确定</span>
</div>


    <script type="text/javascript" src="@Url.Content("~/Areas/WenDa/asset/js/common.js")"></script>
</body>
</html>
