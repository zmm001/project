<div class="top-box">
    <div class="wrapper clearfix">
        <div class="fl">
            <a href="http://www.edushi.com/" target="_blank" class="logo"><img src="@Url.Content("~/Areas/WenDa/asset/images/logo.png")"></a>
            <a href="http://wenda.edushi.com/" target="_blank" class="wenda-logo"></a>
        </div>
        <div class="search-box clearfix">
            <div class="fl search">
                <input type="text" name="" placeholder="搜索你感兴趣的内容" class="ipt" id="search_text" />
                <input type="button" name="" value="搜索" class="btn search-btn" />
            </div>
            <ul class="fl">
                <li class="ask">提问</li>
                <li class="answer"><a href="http://wenda.edushi.com/info/2.html" target="_blank">回答</a></li>
            </ul>
        </div>
        <ul class="fr tips">
            @*<li><a href="#" target="_blank" class="notice">通知</a></li>
            <li><a href="#" target="_blank" class="invite">邀请</a></li>*@
            <li>
                <a class="my" href="@Url.Content("~/wenda/")">我的</a>
                <span class="logout"><a href="@Url.Content("~/exitlogin.htm?BackUrl=" + HttpUtility.HtmlEncode(Request.Url))">退出</a></span>
            </li>
        </ul>
    </div>
</div>

<script>
    $(function () {
        document.onkeydown = function (e) {
            if (document.activeElement.id == "search_text") {
                var ev = document.all ? window.event : e;
                if (ev.keyCode == 13) {
                    toSearch();
                }
            }
        }

        $(".search-btn").click(function () {
            toSearch();
        });

        function toSearch() {
            var text = $("#search_text").val();
            if (text != "") {
                window.open("http://wenda.edushi.com/info/search.html?keyword=" + encodeURIComponent(text));
            } else {
                popUp("请输入关键词");
            }
        }
    });
</script>