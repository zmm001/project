<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="applicable-device" content="pc" />
    @RenderSection("meta", false)
    <link href="@Url.Content("~/asset/css/common.css")" rel="stylesheet" />
    <script src="@Url.Content("~/asset/js/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?99a36e54478482e04c158ab069a3e598";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>
    <style>
        body a {
            cursor: pointer;
        }
    </style>
</head>

<body>
    <!--加载头部-->
    @{Html.RenderAction("Header", "Shared");}

 
    @RenderBody()

    <!--加载尾部-->
    @{Html.RenderAction("Footer", "Shared");}

    <div class="pop-box">
        <div class="msg" id="msg">确定要删除吗？</div>
        <span class="btn cancel">取消</span>
        <span class="btn confirm">确定</span>
    </div>

    <script src="@Url.Content("~/asset/js/user.js")" type="text/javascript"></script>

</body>
</html>
