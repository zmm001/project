                  <!-- ios单按钮确认框 -->
    <section class="confirms-ios" id="iosconfirm">
        <div class="pop-box">
            <div class="msg"></div>
            <div class="tool">
                <button class="ennsure dan">确定</button>
            </div>
        </div>
    </section>
}
else
{   // 安卓
          <!-- andriod双按钮确认框 -->
    <section class="confirms-android" id="androidconfirms">
