  <CustomWdAPPCache>
    <Caches>
      <addCache cacheID="WdListCache" cacheKey="Edushi_Wd1_WenDaList_{0}_{1}_App" cacheTime="0" /><!--问答列表，单位秒,{0}表示频道ID，{1}表示缓存页码，用于API-->
      
