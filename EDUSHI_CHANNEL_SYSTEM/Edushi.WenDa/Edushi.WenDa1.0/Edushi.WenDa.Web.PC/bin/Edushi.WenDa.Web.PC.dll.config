  <CustomWdPcCache>
    <Caches>
      <!--问答所有分类（7天），单位秒-->
      <addCache cacheID="AllWdTypeCache" cacheKey="Edushi_Wd1_AllWdType_PC" cacheTime="604800" />
      <!--首页问答列表，单位秒,{0}表示频道ID，{1}表示缓存页码-->
      <addCache cacheID="WdListCache" cacheKey="Edushi_Wd_WenDaList_{0}_{1}_PC" cacheTime="600" />
      <!--300条问题缓存，{0}表示分类ID，单位秒-->
      <addCache cacheID="QuestionListCache" cacheKey="Edushi_Wd1_QuestionList_{0}_PC" cacheTime="600" />
      <!--等我回答问题缓存，{0}表示分类ID，{1}表示数量，单位秒-->
      <addCache cacheID="WaitQuestionListCache" cacheKey="Edushi_Wd1_WaitQuestionList_{0}_{1}_PC" cacheTime="600" />
      <!--用户信息，{0}表示用户ID-->
      <addCache cacheID="UserInfoHt" cacheKey="Edushi_Wd1_userInfoHt_{0}_PC" cacheTime="600" />
      <!--用户信息(问答)，{0}表示用户ID-->
      <addCache cacheID="UserInfoWenDa" cacheKey="Edushi_Wd1_userInfoWenDa_{0}_PC" cacheTime="600" />
      <!--文章评论数据,{0}表示文章编号-->
      <addCache cacheID="AnswerCommentCache" cacheKey="Edushi_Wd1_Comment_{0}_PC" cacheTime="600" />
      <!--问题详细，{0}表示问题ID-->
      <addCache cacheID="QuestionDetailCache" cacheKey="Edushi_Wd1_QDetail_{0}_PC" cacheTime="600" />
      <!--答案列表，{0}表示问题ID,{1}表示排序方式-->
      <addCache cacheID="AnswerListCache" cacheKey="Edushi_Wd1_AnswerListDetail_{0}_{1}_PC" cacheTime="600" />
      <!--问题分词结果缓存,{0}表示问题ID，单位秒-->
      <addCache cacheID="QuestionFenCiCache" cacheKey="Edushi_Wd1_fenci_Data_{0}_PC" cacheTime="600" />
      <!--关键词分词结果缓存,{0}表示关键词，单位秒-->
      <addCache cacheID="KeywordFenCiCache" cacheKey="Edushi_Wd1_KeyWordfenci_Data_{0}_PC" cacheTime="600" />
      <!--更多阅读缓存-->
      <addCache cacheID="MoreQuestionCache" cacheKey="Edushi_Wd1_MoreQuestion_{0}_PC" cacheTime="600" />
      <!--搜索问题结果缓存,{0}表示搜索关键词,单位秒-->
      <addCache cacheID="SearchQuestionResultCache" cacheKey="Edushi_Wd1_SearchQuestion_{0}_PC" cacheTime="600" />
      <!--搜索页问答结果缓存,{0}表示搜索关键词,{1}表示页码,单位秒-->
      <addCache cacheID="SearchWdResultCache" cacheKey="Edushi_Wd1_SearchWd_{0}_{1}_PC" cacheTime="600" />
      <!--回答评论数据(CommentCustomModel),{0}表示回答编号,{1}表示页码-->
      <addCache cacheID="AnswerCommentCustomCache" cacheKey="Edushi_Wd1_CommentCustom_{0}_{1}_PC" cacheTime="300" />
      <!--评论除前三条外所有回复(CommentCustomModel),{0}表示评论编号-->
      <addCache cacheID="CommentReplyLastDataCache" cacheKey="Edushi_Wd1_CommentReplyLastData_{0}_PC" cacheTime="300" />
    </Caches>
  </CustomWdPcCache>
