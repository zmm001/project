                            } else {
                                alert(data.Msg);
                            }
                        }
                    });
                   
                }
            });
        $("body").on("click",
            ".clearfix .cai",
            function () {
                if (!$(this).hasClass("yicai") && !$(this).siblings(".zan").hasClass("yizan")) {
                    var _this = $(this);
                    var answerId = _this.parents(".js-oper").data("id");
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/wenda/AddAnswerUpvoteDownvote.htm",
                        data: { "iaId": answerId, "action": 2 },
