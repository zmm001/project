                            if (data.ResultCode == 1) {
                                var _number = _this.find("span").text();
                                _this.addClass("yicai");
                                _this.find("em").show();
                                _this.find("span").text(parseInt(_number) + 1);
                            } else if (data.ResultCode == 2) {
