@model Edushi.Bang.Web.PC.Models.SharedModel
<script type="text/javascript">
    $(function () {
        window.onload = function () {
            var $li = $('.MainNav li');
            var $ul = $('.SubNav ul');
            $li.mouseover(function () {
                var $this = $(this);
                var $t = $this.index();
                $li.removeClass();
                $this.addClass('current');
                $ul.css('display', 'none');
                if ($t != 0) {
                    $ul.eq(($t - 1)).css('display', 'block');
                }
            })
        }

        $("a#ChangeCity").click(function () {
            $("#CityList").toggle(500);
        })
    });
</script>
