@{
    ViewBag.Title = "E都市地图";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" id="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0,minimum-scale=1.0,user-scalable=no" />
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.4&key=e8c07f64d6c9803cff6f05258b065221&plugin=AMap.Driving,AMap.Transfer,AMap.Walking,AMap.RangingTool,AMap.Autocomplete,AMap.PlaceSearch,AMap.AdvancedInfoWindow,AMap.Geolocation"></script>
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="http://webapi.amap.com/ui/1.0/main.js?v=1.0.11"></script>
    <link href="~/Content/navigation.css" rel="stylesheet" />
    <script>
        document.documentElement.style.fontSize = 100 * ((document.documentElement.clientWidth) / 750) + "px";
    </script>
    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/map.js"></script>
    <script src="~/Scripts/Constants.js"></script>
</head>
<body class="overflow">
    <div id="container" class="tooltip">
    </div>
    @*<section class="maps">
        <img src="~/images/map_img.jpg" />
    </section>*@
    <script type="text/javascript">
        $(function () {
            $("body").height($(window).height());
            $(window).resize(function () {
                $("body").height($(window).height());
            });
        });
    </script>
    <section class="top-travel-mode travel-mode">
        <a href="/wap/Line" class="back"></a>
        <ul class="travel-tab">
            <li class="car on"><span></span></li>
            <li class="bus"><span></span></li>
            <li class="walk"><span></span></li>
        </ul>
    </section>
    <section class="line-info-bottom">
        <div class="car-dview">
            <div class="tips">
                <div>潮王路 <span>></span> 河东路 <span>></span> 朝晖路</div>
                <p>8分钟前（1.17公里）</p>
            </div>
            <a href="线路-驾车详情.html" class="details">路线详情 ></a>
        </div>
    </section>
    <script type="text/javascript">
        $(function () {
            $(".travel-tab .bus").click(function () {
                $(this).addClass("on").siblings().removeClass("on");
                window.location.href = "/wap/Line_bus";
            });
            $(".travel-tab .walk").click(function () {
                $(this).addClass("on").siblings().removeClass("on");
                window.location.href = "/wap/Line_walk";
            });
            $(".travel-tab .car").click(function () {
                $(this).addClass("on").siblings().removeClass("on");
                window.location.href = "/wap/Line_drive";
            });
        })
    </script>
    <script src="~/Scripts/common.js"></script>
</body>
</html>
