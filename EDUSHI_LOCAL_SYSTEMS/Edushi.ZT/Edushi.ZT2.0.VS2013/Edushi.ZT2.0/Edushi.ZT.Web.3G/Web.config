<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
    <section name="CustomZtCache" type="Edushi.CacheConfigSection.CacheConfigHandler, Edushi.CacheConfigSection" />
  </configSections>
  <CustomZtCache>
    <Caches>
      <!--反射对象缓存（24小时），{0}表示命名空间.类名，单位秒-->
      <addCache cacheID="ReflectCache" cacheKey="{0}" cacheTime="86400" />
      <!--资讯所有分类（7天），单位秒-->
      <addCache cacheID="AllZxTypeCache" cacheKey="Edushi_Zt2_AllZxType_3g" cacheTime="604800" />
      <!--专题所有分类（7天），单位秒-->
      <addCache cacheID="AllZtTypeCache" cacheKey="Edushi_Zt2_AllZtType_3g" cacheTime="604800" />
      <!--专题列表推荐数据,{0}表示频道ID，首页默认0，单位秒-->
      <addCache cacheID="RecTopicCache" cacheKey="Edushi_Zt2_Recommend_{0}_3g" cacheTime="7200" />
      <!--详细页文章详细，{0}表示文章ID，单位秒-->
      <addCache cacheID="TopicDetailCache" cacheKey="Edushi_Zt2_article_detail_{0}_3g" cacheTime="7200" />
      <!--详细页分享，{0}表示图闻ID-->
      <addCache cacheID="DetailShareCache" cacheKey="Edushi_Zt2_Detail_Share_{0}_3g" cacheTime="7200" />
      <!--文章评论数据,{0}表示文章编号-->
      <addCache cacheID="ArticleCommentCache" cacheKey="Edushi_Zt2_Comment_{0}_3g" cacheTime="300" />
      <!--文章评论数据(CommentCustomModel),{0}表示文章编号-->
      <addCache cacheID="ArticleCommentCustomCache" cacheKey="Edushi_Zt2_CommentCustom_{0}_3g" cacheTime="300" />
      <!--评论详细数据(CommentCustomModel),{0}表示评论编号-->
      <addCache cacheID="CommentDetailCustomCache" cacheKey="Edushi_Zt2_CommentDetailCustom_{0}_3g" cacheTime="300" />
      <!--详细页资讯，{0}表示专题ID，单位秒-->
      <addCache cacheID="TopicRelNewsCache" cacheKey="Edushi_Zt2_article1_detail_{0}_3g" cacheTime="7200" />
      <!--详细页频道排行，{0}表示父分类ID，单位秒-->
      <addCache cacheID="TopicRecoCache" cacheKey="Edushi_Zt2_topicrecommend_detail_{0}_3g" cacheTime="7200" />
      <!--用户信息(Hashtable)，{0}表示用户ID或昵称,{1}表示是否需要文章数,单位秒-->
      <addCache cacheID="UserInfoHashCache" cacheKey="Edushi_Zt2_userHash_{0}_{1}_3g" cacheTime="7200" />
      <!--详细页相关资讯，{0}表示专题ID，单位秒-->
      <addCache cacheID="TopicRelNewsCache" cacheKey="Edushi_Zt2_article1_detail_{0}_3g" cacheTime="7200" />
    </Caches>
  </CustomZtCache>
  <appSettings>
    <add key="webpages:Version" value="2.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <!--资讯站域名-->
    <add key="domain_zixun" value="http://m.edushi.com/"/>
    

    <add key="sectionName" value="CustomZtCache" />
    <!--数据访问层-->
    <add key="DAL" value="Edushi.ZT.MongoDBDAL" />
    <!--创建反射对象时是否需要缓存，1：需要，0：不需要-->
    <add key="CreateObjectCacheFlag" value="1" />


    <!--sql server连接字符串-->
    <add key="Connstring" value="Data Source=61.153.104.233,2433; Database=edushi_zixun;User ID=sasa;Password=UH876Gyti%^90^tU;" />
    <!--服务器连接池（生活帮）192.168.100.196-->
    <add key="MongodbConnection_Bang" value="222.73.207.81:10008,222.73.207.92:10008,61.153.104.233:10008" />
    <!--服务器连接池（生活帮写入）192.168.100.196-->
    <add key="MongodbConnection_Write" value="mongodb://61.153.104.233:10008/?safe=true" />
    <!--数据库名称（生活帮）-->
    <add key="DataBaseName_Bang" value="edushi_zixun" />
    <!--副本集名称-->
    <add key="ReplicaSetName" value="edushi" />
    <!--超时时间，单位秒-->
    <add key="ConnectTimeout" value="3" />

    <!--CDN图片地址-->
    <add key="CdnPicUrl" value="http://npic7.edushi.com/" />

    <!--合作APP使用的URL参数-->
    <add key="CooperationApp_UrlParameterName" value="u" />
    <!--3G版所需要跳转的城市，以逗号分开，如ningbo,sh,hz-->
    <add key="Redirect_City" value="ningbo" />
    <!--合作APP使用的URL参数-->
    <add key="CooperationApp_UrlParameterName" value="u"/>
    <!--列表推荐数量-->
    <add key="recPicCount" value="225" />
    <!--页面第一次加载记录数-->
    <add key="FirstLoadNum" value="26"/>
    <!--页面动态加载记录数-->
    <add key="DynamicLoadNum" value="10"/>
    <!--微博分享appid-->
    <add key="WeiBoShareAppid" value="2088369023" />
    <!--文章评论显示数量-->
    <add key="CommentPageSize" value="10"/>
    <!--用户头像根目录-->
    <add key="domain_User" value="http://apps.edushi.com/avatar" />
    <!--Cookie名称-->
    <add key="CookieName" value="edushiUserId" />
    <!--加密和解密的Key-->
    <add key="DEncryptKey" value="edushi_UserCenter2.0" />

    <!--全文检索URL-->
    <add key="ElasticSearchUrl" value="http://183.129.206.153:9400/,http://183.129.206.155:9400/,http://183.129.206.156:9400/" />
    <!--全文检索数据库-->
    <add key="EsDataBase" value="edushi_zixun" />
    <!--检索集合-->
    <add key="EsCollection" value="InfoArticle" />
    <!--详细页相关新闻总数-->
    <add key="RelationNewCount" value="300" />
    <!--文章评论显示数量-->
    <add key="ArticleCommentCount" value="5"/>
    <!--相关新闻页容量-->
    <add key="RelationNewPageSize" value="10"/>
  </appSettings>

  <system.web>
    
    <httpRuntime targetFramework="4.5" />
    
    <compilation debug="true" targetFramework="4.5" />

    <pages>
      <namespaces>
        <add namespace="System.Web.Helpers" />
        <add namespace="System.Web.Mvc" />
        <add namespace="System.Web.Mvc.Ajax" />
        <add namespace="System.Web.Mvc.Html" />
        <add namespace="System.Web.Routing" />
        <add namespace="System.Web.WebPages" />
      </namespaces>
    </pages>
    <caching>
      <outputCache />
      <outputCacheSettings>
        <outputCacheProfiles>
          <clear />
          <add name="IndexCache3g" varyByParam="none" location="Downstream" varyByCustom="none" duration="300" />
          <add name="ChannelIndexCache3g" varyByParam="none" location="Downstream" varyByCustom="none" duration="300" />
          <add name="DetailCache3g" varyByParam="none" location="Downstream" varyByCustom="none" duration="300" />

        </outputCacheProfiles>
      </outputCacheSettings>
    </caching>
  </system.web>

  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
    <modules runAllManagedModulesForAllRequests="true" />
  <handlers>
      <remove name="ExtensionlessUrlHandler-ISAPI-4.0_32bit" />
      <remove name="ExtensionlessUrlHandler-ISAPI-4.0_64bit" />
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <add name="ExtensionlessUrlHandler-ISAPI-4.0_32bit" path="*." verb="GET,HEAD,POST,DEBUG,PUT,DELETE,PATCH,OPTIONS" modules="IsapiModule" scriptProcessor="%windir%\Microsoft.NET\Framework\v4.0.30319\aspnet_isapi.dll" preCondition="classicMode,runtimeVersionv4.0,bitness32" responseBufferLimit="0" />
      <add name="ExtensionlessUrlHandler-ISAPI-4.0_64bit" path="*." verb="GET,HEAD,POST,DEBUG,PUT,DELETE,PATCH,OPTIONS" modules="IsapiModule" scriptProcessor="%windir%\Microsoft.NET\Framework64\v4.0.30319\aspnet_isapi.dll" preCondition="classicMode,runtimeVersionv4.0,bitness64" responseBufferLimit="0" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="GET,HEAD,POST,DEBUG,PUT,DELETE,PATCH,OPTIONS" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers></system.webServer>
  <!--日志-->
  <log4net>
    <logger name="loginfo">
      <level value="ALL" />
      <appender-ref ref="InfoAppender" />
    </logger>
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <!-- 输出到什么目录-->
      <param name="File" value="D:\LogFiles\ZT_2\3g\" />
      <!-- 是否覆写到文件中-->
      <param name="AppendToFile" value="true" />
      <!-- 备份文件的个数-->
      <param name="MaxSizeRollBackups" value="100" />
      <!-- 单个日志文件最大的大小-->
      <param name="MaximumFileSize" value="10MB" />
      <!-- 是否使用静态文件名true-->
      <param name="StaticLogFileName" value="false" />
      <!-- 日志文件名-->
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;" />
      <!--Size-->
      <param name="RollingStyle" value="Date" />
      
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="[%t]%-5p %d [%c] %m%n" />
      </layout>
    </appender>
  </log4net>
</configuration>
