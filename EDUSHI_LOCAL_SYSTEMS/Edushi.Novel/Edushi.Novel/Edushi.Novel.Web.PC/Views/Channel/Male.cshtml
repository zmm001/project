            <div class="fr module-r current-rank-box">
                <div class="nav-title">
                    <span>本期</span>排行
                </div>
                <div class="rank-list">
                    <ul>
                        @if (Model != null && Model.RankBookList.Any())
                        {
                            for (int i = 0; i < Model.RankBookList.Count; i++)
                            {
                                var rb = Model.RankBookList[i];
                                if (i == 0)
                                {
                                    <li data-num="1" class="first">
