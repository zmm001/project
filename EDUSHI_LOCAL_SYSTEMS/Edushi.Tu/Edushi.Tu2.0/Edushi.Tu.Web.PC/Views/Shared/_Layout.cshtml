@using Edushi.Tu.Special
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    @RenderSection("meta", false)
    <link href="@Url.Content("~/asset/css/common7.0.css")" rel="stylesheet" type="text/css"/>
    <script type="text/javascript" src="@Url.Content("~/asset/js/jquery-1.8.3.min.js")"></script>
</head>
<body>
<!--顶部导航-->
@{ Html.RenderAction("TopHeader", "Shared", new { channelUrl = ViewBag.IsDetail == null ? "" : Common.GetInfoListUrl(Url.Content("~/"), 0, Model.parentType.PT_ID), channelName = ViewBag.IsDetail == null ? "" : Model.parentType.PT_Name });}

@RenderBody()

<!--加载底部-->
@{Html.RenderAction("Footer", "Shared");}
</body>
</html>
